<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page.title or renderData.title or metadata.title }}</title>
    <meta name="Description" content="{{ description or renderData.description or metadata.description }}">
    <link rel="canonical" href="{{ page.url }}" />
    <meta property="og:title" content="{{ title or renderData.title or metadata.title }}" />
    <meta property="og:url" content="{{ page.url }}" />
    <meta property="og:description" content="{{ description or renderData.description }}" />
    <meta property="og:image" content="/static/img/logo.png" />
    <meta property="og:type" content="article" />
      {# <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}"> #}
    {% set css %}
      {% include "style.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <header>
      <h1 class="home">
        <a href="{{ '/' | url }}">
          {% set logoSrc %}
            {% imageUrlFor metadata.logo.asset._ref, 600 %}
          {% endset %}
          {% image logoSrc, metadata.logo.alt, "(min-width: 30em) 50vw, 100vw"  %}
        </a>
      </h1>
      <ul class="nav">
        {%- for nav in collections.nav | reverse -%}
        <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
    </header>

    <main {% if templateClass %}class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
    
    <footer>
      <ul class="supporterslist" style="counter-reset: start-from {{ supporterslist.length + 1 }}">
      {% asyncEach supporter in collections.supporters | reverse %}
        {% set currentSupporter = supporter.data.supporter %}
        {% set imageSrc %}
          {% imageUrlFor currentSupporter.supporter.logo.asset._ref, 400 %}
        {% endset %}
        <li class="supporterlist-item{% if supporter.url == url %} supporterlist-item-active{% endif %}">
          <a href="{{ currentSupporter.website | url }}?ref=PerthshireGravel" class="supporterlist-link">
            {% image imageSrc, currentSupporter.supporter.logo.alt  %}
          </a>
        </li>
      {% endeach %}
      </ul>
      {{ metadata.charityInfo | blocksToHTML | safe }}
      <div>
        {% asyncEach funder in metadata.fundedBy %}
          {% set imageSrc %}
            {% imageUrlFor funder.asset._ref, 400 %}
          {% endset %}
        <div>
          <a href="{{ funder.link }}">
            {% image imageSrc, funder.alt %}
          </a>
        </div>
        {% endeach %}
      </div>

    </footer>
  </body>