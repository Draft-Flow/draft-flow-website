{
  "name": "draft-and-flow-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:site": "rimraf _site",
    "clean:bundles": "rimraf ./static/bundles/*",
    "start": "npm run dev",
    "node:hash": "node hash",
    "dev:eleventy": "npx eleventy --watch --serve --port=8888",
    "css:watch": "npx tailwindcss -i ./src/assets/css/styles.css -o ./_site/css/styles.css -w",
    "css:build": "npx tailwindcss -i ./src/assets/css/styles.css -o ./_site/css/styles.css --minify",
    "build": "npm run clean:site && npm run css:build && ELEVENTY_ENV=production eleventy",
    "dev": "NODE_ENV=development npm-run-all clean:bundles -p node:hash dev:eleventy css:watch",
    "debug": "DEBUG=* npx eleventy",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --ext .js . --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Draft-Flow/draft-flow-website.git"
  },
  "author": "Draft & Flow",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Draft-Flow/draft-flow-website/issues"
  },
  "homepage": "https://github.com/Draft-Flow/draft-flow-website",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@googlemaps/google-maps-services-js": "^3.3.13",
    "@sanity/block-content-to-markdown": "^0.0.5",
    "clean-css": "^5.3.0",
    "concurrently": "^7.2.2",
    "date-fns": "^2.28.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^10.1.0",
    "get-youtube-id": "^1.0.1",
    "markdown-it": "^13.0.1",
    "rimraf": "^2.7.1",
    "slugify": "^1.6.6"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^2.0.1",
    "@mapbox/togeojson": "github:mapbox/togeojson",
    "@portabletext/to-html": "^1.0.3",
    "@sanity/asset-utils": "^1.3.0",
    "@sanity/client": "^3.3.2",
    "@sanity/image-url": "^1.0.1",
    "@turf/helpers": "^6.5.0",
    "@turf/simplify": "^6.5.0",
    "@turf/turf": "^6.5.0",
    "chart.js": "^4.3.0",
    "cssnano": "^6.0.1",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.46",
    "groq": "^2.29.3",
    "html-minifier": "^4.0.0",
    "mapbox-gl": "^2.9.1",
    "md5": "^2.3.0",
    "tailwindcss": "^3.3.3",
    "xmldom": "^0.6.0"
  }
}
