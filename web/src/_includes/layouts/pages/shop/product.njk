{% extends 'layouts/base/index.njk' %}

{% block content %}
  <section class="flex justify-center px-2 lg:px-4">
    <div class="max-w-6xl w-full py-20">
      {{ collections.shop | eleventyNavigationBreadcrumb(eleventyNavigation.key, { includeSelf: true }) | eleventyNavigationToHtml | safe }}

      {{ title }}
      {{ product.category.parent.title }}
      {{ product.category.title }}
      {{ product.brand.name }}

       {% set imageSrc %}
         {% imageUrlFor product.brand.logo.ref, 400 %}
        {% endset %}
       
                    <a href="/brands/{{ product.brand.slug }}/">
                        {% image imageSrc, product.brand.logo.alt, "(min-width: 20em) 50vw, 100vw", null, 'eager', null, null, 'h-8 md:h-14 w-auto' %}
                    </a>
          
      
      <div class="description">
        {{ product.body | safe }}
      </div>
    </div>
  </section>
{% endblock %}
