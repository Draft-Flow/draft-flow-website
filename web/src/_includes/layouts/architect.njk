{% extends 'layouts/base/index.njk' %}

{%- set bannerImageLg -%}
  {%- imageUrlFor architect.banner.asset._ref, 2000 -%}
{%- endset -%}

{%- set architectImage -%}
  {%- imageUrlFor architect.image.asset._ref, 600-%}
{%- endset -%}

{% set bannerTitle = architect.name %}

{% block banner %}
  {% if bannerImageLg %}
    {% include "./includes/bannerLarge.njk" %}
  {% endif %}
{% endblock %}

{% block content %}
  <section class="flex justify-center px-2 lg:px-4">
    <div class="max-w-6xl w-full py-20">
      <h2 class="font-bold text-5xl">Meet {{ architect.nickname }}!<h2>
      <div class="divider w-40"></div>

      <div class="flex flex-col md:flex-row justify-between">
        <div class="md:pr-44 text-lg">
          {{ architect.body | safe }}
        </div>
        <div class="w-full max-w-sm">
          {% image architectImage, architect.name %}
          <div class="relative text-3xl font-bold mt-16 py-10 px-2 before:h-1 before:w-full before:bg-tread before:bg-repeat-x before:bg-[length:100%_6px] before:overflow-visible before:-mx-2 before:shadow-md before:shadow-gray-300 before:absolute before:top-0">
            <blockquote class="">
              “A quote from Rosie”
            </blockquote>
          </div>
        </div>
      </div>
      <div class="w-full flex flex-col items-center my-12">
        <h2 class="text-3xl font-bold">Published Routes</h2>
        <div class="divider w-40"></div>
      </div>
      {% set routesList = architect.routes %}
      {% include "./includes/routesList.njk" %}
    </div>
  </section>
{% endblock %}


