<footer>
  <ul class="supporterslist" style="counter-reset: start-from {{ supporterslist.length + 1 }}">
  {% asyncEach supporter in collections.supporters | reverse %}
    {% set currentSupporter = supporter.data.supporter %}
    {% set imageSrc %}
      {% imageUrlFor currentSupporter.supporter.logo.asset._ref, 400 %}
    {% endset %}
    <li class="supporterlist-item{% if supporter.url == url %} supporterlist-item-active{% endif %}">
      <a href="{{ currentSupporter.website | url }}?ref=PerthshireGravel" class="supporterlist-link">
        {% image imageSrc, currentSupporter.supporter.logo.alt  %}
      </a>
    </li>
  {% endeach %}
  </ul>
  {{ metadata.charityInfo | blocksToHTML | safe }}
  <div>
    {% asyncEach funder in metadata.fundedBy %}
      {% set imageSrc %}
        {% imageUrlFor funder.asset._ref, 400 %}
      {% endset %}
    <div>
      <a href="{{ funder.link }}">
        {% image imageSrc, funder.alt %}
      </a>
    </div>
    {% endeach %}
  </div>
</footer>